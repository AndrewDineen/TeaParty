extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")

block content
    main
        .grid
            if prods.length > 0
                each product in prods
                    article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                    .card__image
                        img(src="https://66.media.tumblr.com/2507f880c8fed3d6b906c2f33780729e/tumblr_inline_pmq15q2blQ1vce7mu_540.jpg", alt="dog holding leash")
                    .card__content
                        h2.product__price $19.99
                        p.product__description Strongest leash money can buy!
                    .card__actions
                        button.btn Add to Cart
            else
                h1 No Products